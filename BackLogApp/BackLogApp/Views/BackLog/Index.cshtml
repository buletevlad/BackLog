@model BackLogApp.ViewModels.ListOfBackLogViewModel
<head>
   
</head>
<h1 style="text-align:center">
    Backlogs
    <a href="@Url.Action("Create","BackLog")" class="btn btn-success" style="padding-top:10px;"><i class="fa fa-plus" aria-hidden="true"></i></a>
</h1>


@*<div class="text-center">
    <a href="@Url.Action("Create","BackLog")" class="btn btn-success" style="padding:15px 80px;"><i class="fa fa-plus" aria-hidden="true"></i></a>
</div>*@

@*<br style="clear:right" /> to make br work after float*@
<br />
<table class="table table-hover table-responsive">

    @foreach (var item in Model.BackLogList)
    {
        <tr style="background-color:#222222">
            <th>
                @Html.LabelFor(model => item.Id)
            </th>
            <th>
                @Html.LabelFor(model => item.Label)
            </th>
            <th>
                @Html.LabelFor(model => item.Status)
            </th>
            <th>
                @Html.LabelFor(model => item.CreatedDate)
            </th>
            <th style="float:right; margin-right:100px;">
                Actions
            </th>
        </tr>
        <tr>
            <td>@item.Id</td>
            <td>@item.Label</td>
            <td>@item.Status</td>
            <td>@item.CreatedDate.Value.Day / @item.CreatedDate.Value.Month / @item.CreatedDate.Value.Year</td>
            <td style="float:right">
                <a href="@Url.Action("Details","BackLog",new { id = item.Id})" class="btn btn-primary" style="border-radius:40px">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </a>
                <a href="@Url.Action("Edit","BackLog",new { id = item.Id})" class="btn btn-warning" style="border-radius:40px">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
                <a href="@Url.Action("Delete","BackLog",new { id = item.Id})" class="btn btn-danger" style="border-radius:40px">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }

</table>
